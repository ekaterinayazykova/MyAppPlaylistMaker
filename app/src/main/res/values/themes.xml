<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.MyAppPlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="itemTextColor">@color/black</item>
        <item name="colorAccent">@color/setting_title</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorButtonNormal">@color/icon_light</item>
        <item name="itemIconTint">@color/black</item>
        <item name="trackColor">@color/switch_track_light</item>
        <item name="thumbColor">@color/switch_thumb_light</item>
        <item name="editTextColor">@color/switch_track_light</item>
        <item name="hintTextColor">@color/switch_thumb_light</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="colorOutline">@color/main</item>
        <item name="android:windowLightStatusBar">true</item>



    </style>

    <style name="Theme.MyAppPlaylistMaker" parent="Base.Theme.MyAppPlaylistMaker" />

    <style name="Theme.MyAppPlaylistMaker.Splash" parent="Base.Theme.MyAppPlaylistMaker">
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_launcher</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">700</item>
        <item name="postSplashScreenTheme">@style/Theme.MyAppPlaylistMaker</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>