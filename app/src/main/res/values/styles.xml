<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityMainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/size_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_8</item>
        <item name="iconTint">?attr/itemIconTint</item>
    </style>

    <style name="Titles" >
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

     </style>

    <style name="TitlesButton" >
        <item name="android:layout_width">@dimen/size_40</item>
        <item name="android:layout_height">@dimen/size_40</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">?attr/itemTextColor</item>

    </style>

    <style name="ActivitySettingsButton" parent="Widget.MaterialComponents.Button" >
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_12</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorButtonNormal</item>
    </style>

    <style name="SongTitle" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="EditTextInput" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@null</item>
        <item name="cursorColor">@color/cursor_color</item>

    </style>

    <style name="SongDescription" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/song_description_size</item>
        <item name="android:textColor">?attr/colorButtonNormal</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Placeholder" >
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ButtonUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/button_refresh_size</item>
        <item name="android:textColor">?attr/helperTextTextColor</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/size_54</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="Placeholder_last_search" >
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Artist_title_trackScreen" >
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textFontWeight">400</item>
    <item name="android:textSize">@dimen/track_screen_song_name</item>
    <item name="android:textColor">?attr/colorAccent</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    </style>

    <style name="Song_title_trackScreen" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Track_duration" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/track_screen_song_name</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Button_create" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Track_description" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/track_description_font</item>
        <item name="android:textColor">@color/switch_thumb_light</item>
    </style>

    <style name="Track_description_info" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/track_description_font</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomNavigationTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="AddPlaylistInputEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="endIconDrawable">@drawable/icon_clear</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/main</item>
        <item name="hintTextColor">@color/hint_selector</item>
        <item name="android:textColorHint">?attr/colorAccent</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_8</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_8</item>
    </style>

    <style name="CustomShapeImage" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_8</item>
    </style>

    <style name="ThemeOverlay.CustomSnackbar" parent="ThemeOverlay.MaterialComponents">
        <item name="snackbarStyle">@style/Widget.App.CustomSnackbar</item>
    </style>

    <style name="Widget.App.CustomSnackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:layout_margin">@dimen/size_6</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CustomSnackbar</item>
        <item name="snackbarTextViewStyle">@style/TextAppearance.App.CustomSnackbarText</item>

    </style>

    <style name="TextAppearance.App.CustomSnackbarText" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="ShapeAppearance.CustomSnackbar" parent="@style/ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="height">@dimen/size_48</item>
        <item name="android:width">@dimen/size_345</item>
        <item name="cornerRadius">@dimen/size_0</item>
    </style>

</resources>

