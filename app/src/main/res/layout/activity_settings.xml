<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_arrow"
        android:textSize="@dimen/main_text_size"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:layout_marginStart="68dp"
        android:layout_marginTop="@dimen/size_14"
        android:textColor="@color/setting_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/arrow"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/icon_arrow"
            app:iconGravity="textStart"
            app:iconTint="@color/setting_title" />

    </FrameLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:textSize="@dimen/settings_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:letterSpacing="0"
            android:layout_marginBottom="@dimen/size_21"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_12"
            android:layout_marginTop="42dp"
            app:thumbTint="@color/switch_thumb_light"
            app:trackTint="@color/switch_track_light"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:inputType="textCapWords"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:iconGravity="end"
            tools:ignore="RtlCompat,TextViewEdits,TouchTargetSizeCheck"/>

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_21"
        android:paddingStart="@dimen/size_16"
        android:paddingEnd="@dimen/size_12"
        android:background="@android:color/transparent"
        android:fontFamily="@font/ys_display_regular"
        android:foreground="?attr/selectableItemBackground"
        android:inputType="textCapWords"
        android:letterSpacing="0"
        android:text="@string/share"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="@dimen/settings_text_size"
        app:icon="@drawable/icon_share"
        app:iconGravity="end"
        app:iconTint="@color/icon_light"
        tools:ignore="RtlCompat,TextViewEdits,TouchTargetSizeCheck" />

    <Button
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="@dimen/settings_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:letterSpacing="0"
            android:layout_marginBottom="@dimen/size_21"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_12"
            app:icon="@drawable/icon_support"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:inputType="textCapWords"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:iconGravity="end"
            app:iconTint="@color/icon_light"
            tools:ignore="RtlCompat,TextViewEdits,TouchTargetSizeCheck" />

    <Button
            android:id="@+id/acception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acception"
            android:textSize="@dimen/settings_text_size"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:letterSpacing="0"
            android:layout_marginBottom="@dimen/size_21"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_12"
            android:layout_gravity="end"
            app:icon="@drawable/icon_acception"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:inputType="textCapWords"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            app:iconGravity="end"
            app:iconTint="@color/icon_light"
            tools:ignore="RtlCompat,TextViewEdits,TouchTargetSizeCheck" />

    </LinearLayout>